doctype html
html(lang="en")
    head
        include parciales/header
    body.login
        .contenedor-formulario
            h1 Crea tu cuenta en UpTask 
            if errores
                each error in errores
                    p.error.alerta= error.message

            form#formulario.caja.caja-login(method="POST" action="/crear-cuenta")
                .campo
                    label(for="email") Email:
                    input(type="text" name="email" placeholder="Tu email") 
                .campo
                    label(for="password") Password:
                    input(type="password" name="password" placeholder="Tu Password")
                .campo.enviar 
                    input.boton(type="submit" value="Crear Cuenta")
                .campo 
                    a(href="/iniciar-sesion") Volver a Iniciar Sesion
        script(src="dist/bundle.js")